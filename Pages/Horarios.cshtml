@page
@model ComederoPetWeb.Pages.HorariosModel
@{
    ViewData["Title"] = "Programar Horarios Automáticos";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">⏰ Programar Horarios Automáticos</h2>

    <div class="card shadow-sm mb-4 p-3">
        <h5 class="mb-3">Agregar nuevo horario</h5>
        <form method="post" asp-page-handler="Add">
            <div class="row">
                <div class="col-md-4">
                    <label>Hora</label>
                    <input type="time" class="form-control" name="Time" required />
                </div>
                <div class="col-md-6">
                    <label>Días (separados por coma)</label>
                    <input type="text" class="form-control" name="Days" placeholder="Lunes,Miércoles,Viernes" required />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-success w-100" type="submit">➕ Agregar</button>
                </div>
            </div>
        </form>
    </div>

    <div class="card shadow-sm p-3">
        <h5>Horarios programados</h5>
        @if (Model.Schedules == null || !Model.Schedules.Any())
        {
            <p class="text-muted mt-3">No hay horarios registrados aún.</p>
        }
        else
        {
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Hora</th>
                        <th>Días</th>
                        <th>Activo</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Schedules)
                    {
                        <tr>
                            <td>@s.Time.ToString("HH:mm")</td>
                            <td>@s.Days</td>
                            <td>
                                @if (s.Active)
                                {
                                    <span class="text-success fw-bold">Sí</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold">No</span>
                                }
                            </td>
                            <td>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id">
                                    <button type="submit" class="btn btn-sm btn-danger">🗑 Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
