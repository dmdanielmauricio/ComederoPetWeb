@page
@model HorariosModel
@{
    ViewData["Title"] = "Horarios de Alimentación";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-clock-history"></i> Horarios de Alimentación Automática
    </h2>

    <!-- Formulario para agregar nuevo horario -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Agregar nuevo horario</h5>
            <form method="post" asp-page-handler="Add">
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <input type="time" class="form-control" name="NewTime" required />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Agregar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado de horarios -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Horarios Programados</h5>

            @if (Model.Horarios == null || !Model.Horarios.Any())
            {
                <p class="text-muted">No hay horarios registrados aún.</p>
            }
            else
            {
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Días</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var h in Model.Horarios)
                        {
                            <tr>
                                <td>@($"{h.Hour:D2}:{h.Minute:D2}")</td>
                                <td>@h.DaysOfWeek</td>
                                <td>
                                    <span class="badge @(h.IsActive ? "bg-success" : "bg-secondary")">
                                        @(h.IsActive ? "Sí" : "No")
                                    </span>
                                </td>
                                <td>
                                    <form method="post" asp-page-handler="Toggle" class="d-inline">
                                        <input type="hidden" name="Id" value="@h.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-toggle-on"></i> Cambiar
                                        </button>
                                    </form>

                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="Id" value="@h.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
